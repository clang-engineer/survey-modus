<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet author="clang" id="20241208110000-1">
        <createTable tableName="tbl_form">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="title" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="activated" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="order_no" type="int">
                <constraints nullable="true"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="clang" id="20241208110000-2">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="tbl_form"
                                 constraintName="fk_form_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="tbl_user"/>

        <addForeignKeyConstraint baseColumnNames="category_id"
            baseTableName="tbl_form"
            constraintName="fk_form_category_id"
            referencedColumnNames="id"
            referencedTableName="tbl_category"/>
    </changeSet>

    <changeSet author="clang" context="faker" id="20241208110000-1-data">
        <loadData
            file="config/liquibase/fake-data/form.csv"
            separator=";"
            tableName="tbl_form"
            usePreparedStatements="true">
            <column name="id" type="numeric"/>
            <column name="title" type="string"/>
            <column name="description" type="string"/>
            <column name="activated" type="boolean"/>
            <column name="order_no" type="numeric"/>
            <column name="user_id" type="numeric"/>
            <column name="category_id" type="numeric"/>
        </loadData>
    </changeSet>
</databaseChangeLog>
